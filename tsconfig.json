{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types"],
      "@controllers/*": ["./src/controllers/*"],
      "@controllers": ["./src/controllers"],
      "@logger": ["./src/utils/logger.utils"],
      "@logs": ["./src/logs/*"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"],
      "@database/*": ["./src/database/*"],
      "@database": ["./src/database"],
      "@validators/*": ["./src/validators/*"],
      "@validators": ["./src/validators"],
      "@models/*": ["./src/models/*"],
      "@models": ["./src/models"],
      "@routers/*": ["./src/routers/*"],
      "@routers": ["./src/routers"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@middlewares": ["./src/middlewares"],
      "@environments": ["./src/environments"],
      "@emails/*": ["./src/emails/*"],
      "@emails": ["./src/emails"],
      "@constants/*": ["./src/constants/*"],
      "@constants": ["./src/constants"],
      "@app": ["./src/app.ts"],
      "@configs": ["./src/config"]
    },
    "typeRoots": [
      "./src/types/*",
      "./node_modules/@types"
    ],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "src/config"],
  "exclude": ["node_modules", "dist", ".nyc_output", ".coverage", "tests", "src/database/migrations", "src/database/seeders", "src/database/migrations.config.js"]
}
